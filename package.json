{
  "name": "web-components-starter",
  "description": "A Web Components starter project",
  "files": [
    "public",
    "src"
  ],
  "main": "public/web-components-starter-container.js",
  "scripts": {
    "build": "npm run copy && webpack --config webpack.config.js",
    "build-watch": "npm run copy && webpack --watch --config webpack.config.js",
    "check": "bin/npm_check",
    "copy": "mkdir -p public/ && cp -p src/index.html public/ && cp -p assets/favicon.ico public/",
    "browser-sync": "browser-sync start --server --serveStatic ./public/ --files ./public/**/*.*",
    "serve": "npm run browser-sync",
    "start": "npm run check && ( npm run build-watch & npm run serve )",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "AGPL-3.0",
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.19",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.12.5",
    "eslint": "^4.12.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.10.2",
    "webpack-cli": "^3.0.1"
  }
}
